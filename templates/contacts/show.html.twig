{% extends 'layout.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block content %}
    <h1>Contacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">

    <a class="btn btn-secondary mr-2" href="{{ path('app_contacts_index') }}">back to list</a>

    <a class="btn btn-primary mr-2 ml-2" href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
        {{ include('contacts/_delete_form.html.twig') }}
    </div>
{% endblock %}
